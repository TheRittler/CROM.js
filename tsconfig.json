{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "ecore/*": ["crossecore/src/*"],
      "crom_l1_composed/*": ["./crom/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "module": "es6",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
